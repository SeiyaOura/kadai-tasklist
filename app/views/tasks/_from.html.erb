<%= form_with(model: task, local: true) do |f| %>
  
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [["終了","終了"], ["遅れ","遅れ"],["予定通り","予定通り"],["早め","早め"]] %>

  <%= f.submit '作製' %>
<% end %>